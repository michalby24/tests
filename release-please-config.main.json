{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": false,
  "tag-separator": "-",
  "initial-version": "0.1.0",
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "type": "yaml",
          "path": "helm/Chart.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "helm/Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "yaml",
          "path": "openapi3.yaml",
          "jsonpath": "$.info.version"
        }
      ]
    }
  }
}
